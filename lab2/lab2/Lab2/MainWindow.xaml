<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="DockPanel" Height="300" Width="500">
    <DockPanel LastChildFill="False">
        <Label DockPanel.Dock="Top" HorizontalAlignment="Center">Label</Label>
        <TextBox DockPanel.Dock="Left" Width="200">TextBox</TextBox>
        <TextBox DockPanel.Dock="Right" Width="200">TextBox</TextBox>
        <Button DockPanel.Dock="Bottom" Height="25" Width="80" Margin="0 0 0 40">Button</Button>
    </DockPanel>
</Window>
